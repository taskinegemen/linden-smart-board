<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="{ this._width }" height="{ this._height }">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import mx.controls.Alert;
			[Bindable]public var _width: Number = 400;
			[Bindable]public var _height: Number = 300;
			
			[Bindable]public var applicationPath: String;
			
		]]>
	</fx:Script>
	<mx:Canvas id="loading" width="{this._width}" height="{this._height}" x="0" y="0" backgroundColor="#d6d8d8">
		<s:Image id="loadingImage" source="{ this.applicationPath + '/Assets/loading.png' }">
			
		</s:Image>
	</mx:Canvas>
</s:Group>
